@model IEnumerable<GameShop.Models.Game>

@{
    ViewData["Title"] = "List of Games";
}

<div class="row" style="margin-left:300px; margin-right:300px">
    <h1>List of Games</h1>
    <p>
        @if (User.Identity.IsAuthenticated)
        {
            <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
        }
    </p>
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title" style="display:flex; justify-content:space-between">
                                    @item.Name
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <div>
                                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        </div>
                                        
                                    }
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageURL" width="100%" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text"><b>Category: </b>@item.Category.Name</p>
                            <p class="card-text"><b>Price: </b>@item.Price.ToString("c")</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text" style="display:flex; justify-content:space-between">
                                <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Show Details</a>
                                <a class="btn btn-success text-white">Add to cart</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

